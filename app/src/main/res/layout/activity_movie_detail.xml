<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vietd.cinema.MovieDetail"
    tools:showIn="@layout/activity_movie_detail">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/txt_movie_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="GHOST IN THE SHELL"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_movie_detail_poster"
                android:layout_width="150dp"
                android:layout_height="225dp"
                android:paddingTop="5dp"
                android:src="@drawable/imagexample" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/txt_movie_detail_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="107 mins"
                    android:textColor="@color/LightBlack"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_movie_detail_director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Micheal Fly"
                    android:textColor="@color/LightBlack"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_movie_detail_actor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Scarlet Ahihi Scarlet AhihiScarlet AhihiScarlet AhihiScarlet AhihiScarlet AhihiScarlet Ahihi"
                    android:textColor="@color/LightBlack"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_movie_detail_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Amurica"
                    android:textColor="@color/LightBlack"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_movie_detail_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Amurica"
                    android:textColor="@color/LightBlack"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_movie_detail_genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Hantei"
                    android:textColor="@color/LightBlack"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_movie_detail_date_release"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="31/03/2017"
                    android:textColor="@color/LightBlack"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_movie_detail_imdb_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="IMDb: 6.9"
                    android:textColor="@color/LightBlack"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_movie_detail_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="2D"
                    android:textColor="@color/LightBlack"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_movie_detail_booking"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="1dp"
            android:background="@color/CoupleSeat"
            android:text="Booking now"
            android:textColor="@color/LightBlack"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:enabled="false"
                android:text="Description"
                android:textColor="@color/LightBlack"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_movie_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="2D"
                android:textColor="@color/LightBlack"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:enabled="false"
                android:text="Trailer"
                android:textColor="@color/LightBlack"
                android:textSize="13sp" />

            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/vid_movie_detail_trailer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>


