<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vietd.cinema.MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/txt_movie_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="GHOST IN THE SHELL"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_movie_detail_poster"
                    android:layout_width="150dp"
                    android:layout_height="225dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/imagexample" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/txt_movie_detail_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="107 mins"
                        android:textColor="@color/LightBlack"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_movie_detail_director"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Micheal Fly"
                        android:textColor="@color/LightBlack"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_movie_detail_actor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Scarlet Ahihi Scarlet AhihiScarlet AhihiScarlet AhihiScarlet AhihiScarlet AhihiScarlet Ahihi"
                        android:textColor="@color/LightBlack"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_movie_detail_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Amurica"
                        android:textColor="@color/LightBlack"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_movie_detail_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Amurica"
                        android:textColor="@color/LightBlack"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_movie_detail_genres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Hantei"
                        android:textColor="@color/LightBlack"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_movie_detail_date_release"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="31/03/2017"
                        android:textColor="@color/LightBlack"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_movie_detail_imdb_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="IMDb: 6.9"
                        android:textColor="@color/LightBlack"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_movie_detail_format"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="2D"
                        android:textColor="@color/LightBlack"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_movie_detail_booking"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="1dp"
                android:background="@drawable/round"
                android:text="Đặt vé ngay"
                android:textStyle="bold"
                android:textColor="#ffdd00"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Mô tả"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_movie_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="2D"
                    android:textColor="@color/LightBlack"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Trailer"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/vid_movie_detail_trailer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

        <LinearLayout
            android:id="@+id/navigation_draw"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/ic_person_black_24dp" />

                <TextView
                    android:id="@+id/tv_name_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phạm Bá Việt"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ListView
                android:id="@+id/lv_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#babcc4"
                android:padding="5dp" />
        </LinearLayout>


</android.support.v4.widget.DrawerLayout>


