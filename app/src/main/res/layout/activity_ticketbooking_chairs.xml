                android:text="C7"
                android:textSize="10dp" />

            <Button
                android:id="@+id/C8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="C8"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/D1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="D1"
                android:textSize="10dp" />

            <Button
                android:id="@+id/D2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="D2"
                android:textSize="10dp" />

            <Button
                android:id="@+id/D3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/VIPSeat"
                android:text="D3"
                android:textSize="10dp" />

            <Button
                android:id="@+id/D4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/VIPSeat"
                android:text="D4"
                android:textSize="10dp" />

            <Button
                android:id="@+id/D5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/VIPSeat"
                android:text="D5"
                android:textSize="10dp" />

            <Button
                android:id="@+id/D6"
