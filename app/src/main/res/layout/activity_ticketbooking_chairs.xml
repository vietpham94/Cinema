                android:layout_height="40dp"
                android:text="A6"
                android:textSize="10dp" />

            <Button
                android:id="@+id/A7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="A7"
                android:textSize="10dp" />

            <Button
                android:id="@+id/A8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="A8"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/B1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="B1"
                android:textSize="10dp" />

            <Button
                android:id="@+id/B2"
                android:layout_width="40dp"
