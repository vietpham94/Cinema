                android:id="@+id/S8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/CoupleSeat"
                android:text="S8"
                android:textColor="@color/VIPSeat"
                android:textSize="10dp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="@color/OccupiedSeat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <TextView
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:text="Normal Seat" />

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:backgroundTint="@color/VIPSeat" />

            <TextView
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:text="VIP Seat" />

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:backgroundTint="@color/CoupleSeat" />

            <TextView
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:text="Couple Seat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:backgroundTint="@color/OccupiedSeat" />

            <TextView
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:text="Occupied" />

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:backgroundTint="@color/ChoosingSeat" />

            <TextView
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:text="Choosing" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="@color/OccupiedSeat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.90"
            android:orientation="vertical">

            <TextView
                android:id="@+id/numbTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="You have selected 8 ticket(s)" />

            <TextView
                android:id="@+id/totalMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Total: " />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:text="Next" />
    </LinearLayout>
</LinearLayout>