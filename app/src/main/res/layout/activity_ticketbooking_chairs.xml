                android:textSize="10dp" />

            <Button
                android:id="@+id/B8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="B8"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/C1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="C1"
                android:textSize="10dp" />

            <Button
                android:id="@+id/C2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="C2"
                android:textSize="10dp" />

            <Button
                android:id="@+id/C3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/VIPSeat"
                android:text="C3"
                android:textSize="10dp" />

            <Button
                android:id="@+id/C4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/VIPSeat"
                android:text="C4"
                android:textSize="10dp" />

            <Button
                android:id="@+id/C5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/VIPSeat"
                android:text="C5"
                android:textSize="10dp" />

            <Button
                android:id="@+id/C6"
                android:layout_width="40dp"
