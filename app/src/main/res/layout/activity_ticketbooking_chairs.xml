        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp">

            <Button
                android:id="@+id/S1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/CoupleSeat"
                android:text="S1"
                android:textColor="@color/VIPSeat"
                android:textSize="10dp" />

            <Button
                android:id="@+id/S2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/CoupleSeat"
                android:text="S2"
                android:textColor="@color/VIPSeat"
                android:textSize="10dp" />

            <TextView
                android:layout_width="13dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/S3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/CoupleSeat"
                android:text="S3"
                android:textColor="@color/VIPSeat"
                android:textSize="10dp" />

            <Button
                android:id="@+id/S4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/CoupleSeat"
                android:text="S4"
                android:textColor="@color/VIPSeat"
                android:textSize="10dp" />

            <TextView
                android:layout_width="13dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/S5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/CoupleSeat"
                android:text="S5"
                android:textColor="@color/VIPSeat"
                android:textSize="10dp" />

            <Button
                android:id="@+id/S6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/CoupleSeat"
                android:text="S6"
                android:textColor="@color/VIPSeat"
                android:textSize="10dp" />

            <TextView
                android:layout_width="13dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/S7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/CoupleSeat"
                android:text="S7"
                android:textColor="@color/VIPSeat"
                android:textSize="10dp" />

