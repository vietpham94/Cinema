<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <stroke android:width="2dp" android:color="#795e63" />
            <gradient android:angle="-90" android:endColor="#9a6873" android:startColor="#59343a" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <stroke android:width="2dp" android:color="#795e62" />
            <solid android:color="#85585e" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <stroke android:width="2dp" android:color="#795e63" />
            <gradient android:angle="-90" android:endColor="#730214" android:startColor="#f7002b" />
        </shape>
    </item>
</selector>